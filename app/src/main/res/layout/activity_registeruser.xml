<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    tools:context=".activities.Registeruser">
    <RelativeLayout
        android:id="@+id/regrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"
            android:id="@+id/regtool"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/applogo"
            android:id="@+id/regimg"
            android:layout_below="@id/regtool"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Credentials:"
            android:textColor="@color/back"
            android:textSize="20sp"
            android:id="@+id/regtxtx"
            android:layout_below="@id/regimg"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/regtxtx"
            android:layout_margin="10dp"
            android:background="@color/back"
            android:id="@+id/regname"
            android:drawableLeft="@drawable/person"
            android:hint="Name"
            android:maxLines="1"

            android:padding="2dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/back"
            android:id="@+id/regmail"
            android:drawableLeft="@drawable/email"
            android:layout_below="@+id/regname"
            android:hint=" Email"

            android:maxLines="1"

            android:padding="2dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/back"
            android:id="@+id/regmobile"
            android:drawableLeft="@drawable/mobilenumber"
            android:layout_below="@+id/regmail"
            android:hint=" Mobile Number"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="10"
            android:padding="2dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/back"
            android:id="@+id/regaddress"
            android:drawableLeft="@drawable/delivery"
            android:layout_below="@+id/regmobile"
            android:hint="Delivery address"
            android:maxLines="1"
            android:padding="2dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/back"
            android:id="@+id/regpass"
            android:drawableLeft="@drawable/password"
            android:layout_below="@+id/regaddress"
            android:hint="Password"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="10"
            android:padding="2dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/back"
            android:id="@+id/regconpass"
            android:drawableLeft="@drawable/password"
            android:layout_below="@+id/regpass"
            android:hint="Confirm Password"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="10"
            android:padding="2dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/regbtn"
            android:layout_below="@+id/regconpass"
            android:text="Register"
            android:textSize="20dp"
            android:textColor="@color/back"
            android:padding="2dp"/>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/regprogressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_centerInParent="true"/>


</RelativeLayout>