<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.Login">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/applogo"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:id="@+id/imglog"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/back"
        android:id="@+id/etmob"
        android:drawableLeft="@drawable/mobile"
        android:layout_below="@+id/imglog"
        android:hint="Mobile Number"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="10"
        android:padding="2dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/back"
        android:id="@+id/etpas"
        android:drawableLeft="@drawable/password"
        android:layout_below="@+id/etmob"
        android:hint="Password"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:maxLength="10"
        android:padding="2dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/btlog"
        android:layout_below="@+id/etpas"
        android:text="Login"
        android:textSize="20dp"
        android:textColor="@color/back"
        android:padding="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:textColor="@color/back"
        android:layout_below="@+id/btlog"
        android:layout_marginLeft="150dp"
        android:id="@+id/textforgotpass"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtregister"
        android:text="New user ? Register Now"
        android:layout_below="@id/textforgotpass"
        android:textColor="@color/back"
        android:layout_marginLeft="130dp"
        android:textSize="15sp"
        android:layout_marginTop="290dp"
        />

</RelativeLayout>

